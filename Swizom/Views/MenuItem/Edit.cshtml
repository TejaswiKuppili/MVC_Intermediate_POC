@model SwizomDbContext.Models.MenuItem

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h2>Edit Menu Item</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ItemID" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CategoryID" class="control-label">Category</label>
        <select asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "Name"))" class="form-control">
            <option value="">Select a Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RestaurantID" class="control-label">Restaurant</label>
        <select asp-for="RestaurantID" asp-items="@(new SelectList(ViewBag.Restaurants, "RestaurantID", "Name"))" class="form-control">
            <option value="">Select a Restaurant</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
