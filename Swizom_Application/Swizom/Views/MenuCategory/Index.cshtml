@model IEnumerable<Swizom.ViewDataModels.MenuCategoryDTO>

@{
    ViewData["Title"] = "Menu Categories";
}

<h2 class="mb-4">Menu Categories</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add New Category
</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-grid"></i> @item.Name
                    </h5>

                    <p class="text-muted">
                        <i class="bi bi-shop"></i> <strong>@item.RestaurantName</strong>
                    </p>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    // Initialize Bootstrap tooltips
    document.addEventListener("DOMContentLoaded", function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
