@model Swizom.ViewDataModels.OrderDTO

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Are you sure you want to delete this order?</h2>

<div>
    <p><strong>Order Date:</strong> @Model.OrderDate</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.OrderID" method="post">
    <input type="hidden" asp-for="OrderID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
